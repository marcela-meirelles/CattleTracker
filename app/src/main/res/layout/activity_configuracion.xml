<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gestionrural.meirelles.gestionrural.Configuracion">

    <LinearLayout
        android:layout_width="374dp"
        android:layout_height="535dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="2dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="81dp"
            tools:layout_editor_absoluteY="39dp"
            tools:text="Nombre Establecimiento" />

        <TextView
            android:id="@+id/txtviewEstablecimiento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:text="Nombre Establecimiento"
            tools:layout_editor_absoluteX="81dp"
            tools:layout_editor_absoluteY="82dp" />

        <EditText
            android:id="@+id/txtMail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:ems="10"
            android:inputType="textEmailAddress"
            tools:layout_editor_absoluteX="81dp"
            tools:layout_editor_absoluteY="113dp"
            tools:text="mail@mail.com" />

        <TextView
            android:id="@+id/txtMail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            android:text="Mail al que se enviaran los archivos"
            tools:layout_editor_absoluteX="83dp"
            tools:layout_editor_absoluteY="156dp" />

        <EditText
            android:id="@+id/txtFirma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="4"
            android:ems="10"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="215dp"
            tools:text="Firma/Marca" />

        <Button
            android:id="@+id/btnAgregarFirma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="5"
            android:text="Agregar Firma"
            tools:layout_editor_absoluteX="126dp"
            tools:layout_editor_absoluteY="277dp" />

        <Button
            android:id="@+id/btnAceptarConf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="5"
            android:text="Aceptar"
            tools:layout_editor_absoluteX="148dp"
            tools:layout_editor_absoluteY="350dp" />

        <EditText
            android:id="@+id/lstbxFirmasAgregadas"
            android:layout_width="match_parent"
            android:layout_height="107dp"
            android:layout_column="0"
            android:layout_row="7"
            android:ems="10"
            android:inputType="textMultiLine"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="417dp" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
