<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gestionrural.meirelles.gestionrural.gestion_vacunos">

    <LinearLayout
        android:layout_width="365dp"
        android:layout_height="505dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="-2dp"
        tools:layout_editor_absoluteX="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <EditText
                android:id="@+id/txtNumeroCaravana"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ems="10"
                android:inputType="number"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="34dp"
                tools:text="Nro Caravana" />

            <Spinner
                android:id="@+id/spnrFirmas"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout_editor_absoluteX="191dp"
                tools:layout_editor_absoluteY="34dp" />

        </LinearLayout>


    <CheckBox
        android:id="@+id/chkbxPrenada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PreÃ±ada"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="107dp" />

    <CheckBox
        android:id="@+id/chkbxFalladas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fallada"
        tools:layout_editor_absoluteX="191dp"
        tools:layout_editor_absoluteY="107dp" />

    <EditText
        android:id="@+id/txtNotas"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:ems="10"
        android:inputType="textMultiLine"
        tools:layout_editor_absoluteX="17dp"
        tools:layout_editor_absoluteY="286dp"
        tools:text="Notas" />

    <TextView
        android:id="@+id/txtlblPeso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Peso: "
        tools:layout_editor_absoluteX="16dp"
        app:layout_constraintTop_toTopOf="@+id/txtPeso"
        android:layout_marginTop="14dp" />

    <EditText
        android:id="@+id/txtPeso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="162dp"
        tools:text="Ingresar Peso" />

        <TextView
            android:id="@+id/txtviewEdad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edad: "
            app:layout_constraintTop_toTopOf="@+id/spnrEdad"
            tools:layout_editor_absoluteX="16dp" />

        <Spinner
        android:id="@+id/spnrEdad"
        android:layout_width="215dp"
        android:layout_height="43dp"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="234dp" />


        <Button
            android:id="@+id/btnAgregarVacuno"
            android:layout_width="194dp"
            android:layout_height="49dp"
            android:text="Agregar Vacuno"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="354dp" />

        <Button
            android:id="@+id/btnFinalizar"
            android:layout_width="143dp"
            android:layout_height="49dp"
            android:text="Finalizar"
            tools:layout_editor_absoluteX="225dp"
            tools:layout_editor_absoluteY="354dp" />

        <ExpandableListView
            android:id="@+id/lstVacunosIngresados"
            android:layout_width="match_parent"
            android:layout_height="204dp"
            tools:layout_editor_absoluteX="15dp"
            tools:layout_editor_absoluteY="426dp" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
